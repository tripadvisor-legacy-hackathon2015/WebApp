<html lang="en">


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    {{> head }}

    <body onload="getGeoLocation()" ng-app="angularApp">
        <div class="container vertical-center">
        <div class="row">
            <div class="col-md-6 search-bar">
            	<div class="title-padding">
                <h2>
                	<img src="/img/tripadvisor.png" alt="Trip Advisor" height="44" width="44">
                	Tripadvisor
                </h2>
               	</div>
                <div id="custom-search-input">
                    <div class="input-group col-md-12">
                        <form class="form-inline" role="form" id="search_form">
                            <div class="form-group">
                                <input type="text" class="form-control input-lg" placeholder="Search.." id="search_box" onsubmit="search()"/>
                            </div>
                            <button class="btn btn-info btn-lg" type="submit" onclick="search()">
                                <i class="glyphicon glyphicon-search"></i>
                            </button>
                        </form>
    
    <body onload="getGeoLocation()">

        <!--{{> main_search }}-->


        <div class="container-fluid" id="search_results">
            <div class="row">
                <div class="col-md-6">
                    <div id="after_search">

                    {{> after_search}}

                    </div>
                    <div id="results_list">

            </div>
            <div class="container" id="results_list" ng-controller="MainController">
                <div ng-repeat="restaurant in restaurants">
                    <ul>
                        <li><% restaurant.name %></li>
                        <li><% restaurant.coordinates %></li>
                    </ul>
                    </div>
                </div>
                <div class="col-md-6">
                    <div id="map_view">

                        {{> mapView }}

                    </div>
                </div>
            </div>
        </div>

    {{> scripts }}
  </body>
</html>
